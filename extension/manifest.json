{
  "manifest_version": 3,
  "name": "Recall Me - Study Assistant",
  "version": "1.0.0",
  "description": "Retrieve and paste PDF content into ChatGPT/Perplexity for study assistance",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "notifications"
  ],
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Open Recall Me popup"
    },
    "quick-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick search with last query"
    },
    "toggle-study-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle study mode on/off"
    }
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://www.perplexity.ai/*",
    "http://localhost:5000/*",
    "https://*.ngrok-free.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Recall Me Study Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
